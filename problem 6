#include <iostream>

using namespace std;
int main()

{
    int n, c, terms, first, second;
    
    first = 0;
    second = 1;
    
    cout << "Indicate the number of Fibonacci Sequence terms do you wish to see: " << endl;
    cin >> terms;
    
    cout << "The FIRST " << terms << " terms of the Fibonacci Sequence!" << endl;
    
    for (n = 0 ; n < terms ; n++)

    {
        if (n <= 1)
            c = n;
        else
        {
            c = first + second;
            first = second;
            second = c;
        }
        cout << c << ",";
    }
        
    return 0;
}
